<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    tools:context=".WhatToWatchActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="184dp"
        android:layout_height="52dp"
        android:scaleType="fitXY"
        android:src="@drawable/filmstrip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_clear_black_24dp"
        android:onClick="onClickBack"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="212dp"
        android:layout_height="52dp"
        android:scaleType="fitXY"
        android:src="@drawable/filmstrip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@android:color/black"
        android:text="Pick A Genre"
        android:textAlignment="center"
        android:textColor="@color/aqua"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="513dp"


        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button19"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@color/aqua"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/action_genre"
            android:textSize="25sp"
            android:onClick="OnClickAction"/>

        <Button
            android:id="@+id/button18"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@color/aqua"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/adventure_genre"
            android:textSize="25sp"
            android:onClick="OnClickAdventure"/>

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@color/aqua"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/animation_genre"
            android:textSize="25sp"
            android:onClick="OnClickAnimation"/>

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@color/aqua"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/comedy_genre"
            android:textSize="25sp"
            android:onClick="OnClickComedy"/>

        <Button
            android:id="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@color/aqua"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/documentary_genre"
            android:textSize="25sp"
            android:onClick="OnClickDocumentary"/>

        <Button
            android:id="@+id/button15"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@color/aqua"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/drama_genre"
            android:textSize="25sp"
            android:onClick="OnClickDrama"/>

        <Button
            android:id="@+id/button16"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@color/aqua"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/family_genre"
            android:textSize="25sp"
            android:onClick="OnClickFamily"/>

        <Button
            android:id="@+id/button17"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@color/aqua"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/horror_genre"
            android:textSize="25sp"
            android:onClick="OnClickHorror"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
